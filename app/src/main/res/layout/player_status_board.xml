<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/title_guessed_number"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:layout_weight="1"
                  android:textColor="@color/black"
                  android:text="Guessed number"
                  android:padding="5dp" />

              <TextView
                  android:id="@+id/title_correct_pos_count"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:padding="5dp"
                  android:text="# Correct pos digits"
                  android:textColor="@color/black" />
              <TextView
                  android:id="@+id/title_incorrect_pos_count"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:layout_weight="1"
                  android:text="# Incorrect pos digits"
                  android:padding="5dp"
                  android:textColor="@color/black" />
              <TextView
                  android:id="@+id/title_one_wrong_num"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:layout_weight="1"
                  android:text="One wrong digit"
                  android:padding="5dp"
                  android:textColor="@color/black" />
       </LinearLayout>

       <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status_list_view"/>

</LinearLayout>